<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.netxms.ui.eclipse.loginlisteners" name="NXMC Login Listeners" schema="schema/org.netxms.ui.eclipse.loginlisteners.exsd"/>
   <extension-point id="org.netxms.ui.eclipse.branding" name="NetXMS Console Branding" schema="schema/org.netxms.ui.eclipse.branding.exsd"/>
   <extension
         id="nxmc"
         name="NetXMS Management Console"
         point="org.eclipse.core.runtime.applications">
      <application
            thread="main"
            cardinality="singleton-global"
            visible="true">
         <run
               class="org.netxms.webui.core.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.netxms.ui.eclipse.console.perspectives.DefaultPerspective"
            id="org.netxms.ui.eclipse.console.DefaultPerspective"
            name="%perspective.default">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.netxms.ui.eclipse.viewcategory.config"
            name="%category.config">
      </category>
      <category
            id="org.netxms.ui.eclipse.viewcategory.tools"
            name="%category.tools">
      </category>
      <view
            allowMultiple="false"
            category="org.eclipse.ui"
            class="org.eclipse.ui.ExtensionFactory:progressView"
            icon="icons/pview.gif"
            id="org.eclipse.ui.views.ProgressView"
            name="%view.progress"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="%command.ToggleTraceFilter"
            id="org.netxms.ui.eclipse.library.commands.show_trace_filter"
            name="%command.ToggleTraceFilter">
      </command>
      <command
            description="%command.PauseTrace"
            id="org.netxms.ui.eclipse.library.commands.pause_trace"
            name="%command.PauseTrace">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.netxms.ui.eclipse.library.commands.show_trace_filter"
            contextId="org.netxms.ui.eclipse.library.context.AbstractTraceView"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+F2">
      </key>
      <key
            commandId="org.netxms.ui.eclipse.library.commands.pause_trace"
            contextId="org.netxms.ui.eclipse.library.context.AbstractTraceView"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="PAUSE">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="org.netxms.ui.eclipse.library.context.AbstractTraceView"
            name="Abstract Trace View"
            parentId="org.eclipse.ui.contexts.window">
      </context>
   </extension>

  <extension
      point="org.eclipse.equinox.http.registry.servlets">
    <servlet
         alias="/"
         class="org.netxms.webui.core.RedirectServlet">
    </servlet>
  </extension>

   <extension
         point="org.eclipse.ui.presentationFactories">
      <factory
            class="org.netxms.webui.design.business.BusinessPresentationFactory"
            id="org.netxms.webui.design.business.factory"
            name="Business Presentation Factory">
      </factory>
   </extension>
   <extension
         point="org.eclipse.rap.ui.branding">
      <branding
            favicon="icons/favicon.png"
            id="org.netxms.webui.design.business.branding"
            servletName="nxmc"
            themeId="org.netxms.webui.design.business.theme"
            title="NetXMS Management Console">
      </branding>
   </extension>
   <extension
         point="org.eclipse.rap.ui.layouts">
      <layout
            id="org.netxms.webui.design.business.layout"
            name="Business Layout Blue">
         <layoutSet
               class="org.netxms.webui.design.business.layoutsets.LogoInitializer"
               id="org.netxms.webui.design.layoutset.logo"
               name="Logo">
         </layoutSet>
         <layoutSet
               class="org.netxms.webui.design.business.layoutsets.HeaderInitializer"
               id="org.netxms.webui.design.layoutset.header"
               name="Header">
         </layoutSet>
         <layoutSet
               class="org.netxms.webui.design.business.layoutsets.FooterInitializer"
               id="org.netxms.webui.design.layoutset.footer"
               name="Footer">
         </layoutSet>
         <layoutSet
               class="org.netxms.webui.design.business.layoutsets.MenuBarInitializer"
               id="org.netxms.webui.design.layoutset.menubar"
               name="MenuBar">
         </layoutSet>
         <layoutSet
               class="org.netxms.webui.design.business.layoutsets.PerspectiveSwitcherInitializer"
               id="org.netxms.webui.design.layoutset.perspective"
               name="Perspective Switcher">
         </layoutSet>
         <layoutSet
               class="org.netxms.webui.design.business.layoutsets.StackInitializer"
               id="org.netxms.webui.design.layoutset.stack"
               name="Business Stack">
         </layoutSet>
         <layoutSet
               class="org.netxms.webui.design.business.layoutsets.ConfigDialogInitializer"
               id="org.netxms.webui.design.layoutset.confdialog"
               name="Config Dialog">
         </layoutSet>
         <layoutSet
               class="org.netxms.webui.design.business.layoutsets.CoolbarInitializer"
               id="org.netxms.webui.design.layoutset.coolbar"
               name="Coolbar">
         </layoutSet>
         <layoutSet
               class="org.netxms.webui.design.business.layoutsets.CoolbarOverflowInitializer"
               id="org.netxms.webui.design.layoutset.coolbaroverflow"
               name="Coolbar Overflow">
         </layoutSet>
      </layout>
   </extension>
   <extension
         point="org.eclipse.rap.ui.themes">
      <theme
            file="theme/business.css"
            id="org.netxms.webui.design.business.theme"
            name="Business Theme">
      </theme>
   </extension>
   <extension
         point="org.eclipse.rap.ui.stackPresentations">
      <stackPresentation
            actionClass="org.netxms.webui.design.stacks.ConfigAction"
            class="org.netxms.webui.design.stacks.ViewStackPresentation"
            id="org.netxms.webui.design.stack.view"
            name="Example Stack Presentation"
            type="view">
      </stackPresentation>
   </extension>
</plugin>
