# $Header: /cvs/nms/contrib/startup/gentoo/nxsm,v 1.1 2006-01-06 17:04:29 victor Exp $

depend() {
	need net
}

start() {
	ebegin "Starting NetXMS session manager"
	eval start-stop-daemon --start --quiet --pidfile /var/run/nxsm.pid --exec /usr/local/bin/nxsm -- -d -p /var/run/nxsm.pid $OPTS
	eend $?
}

stop() {
	ebegin "Stopping NetXMS session manager"
	start-stop-daemon --stop --quiet --pidfile /var/run/nxsm.pid
	eend $?
}
