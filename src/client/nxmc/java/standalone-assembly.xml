<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
   <id>standalone-jar</id>
   <formats>
      <format>jar</format>
   </formats>
   <includeBaseDirectory>false</includeBaseDirectory>
   <dependencySets>
      <dependencySet>
         <outputDirectory/>
         <unpack>true</unpack>
         <includes>
            <include>org.netxms:nxmc</include>
         </includes>
         <unpackOptions>
            <includes>
               <include>org/netxms/nxmc/BootstrapLoader.class</include>
            </includes>
         </unpackOptions>
      </dependencySet>
      <dependencySet>
         <outputDirectory>BOOT-INF/core</outputDirectory>
         <unpack>false</unpack>
         <excludes>
            <exclude>org.eclipse.platform:org.eclipse.swt.*</exclude>
         </excludes>
      </dependencySet>
      <dependencySet>
         <outputDirectory>BOOT-INF/swt</outputDirectory>
         <unpack>false</unpack>
         <includes>
            <include>org.eclipse.platform:org.eclipse.swt.*</include>
         </includes>
      </dependencySet>
   </dependencySets>
</assembly>