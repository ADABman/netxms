<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Object Browser"
            allowMultiple="false"
            icon="icons/object_browser.png"
            class="org.netxms.ui.eclipse.objectbrowser.ObjectBrowser"
            id="org.netxms.ui.eclipse.objectbrowser.view.object_browser">
      </view>
   </extension>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Views"
            id="org.netxms.ui.eclipse.console.category.views">
      </category>
      <command
            name="Object Browser"
            description="Open Object Browser"
            categoryId="org.netxms.ui.eclipse.console.category.views"
            id="org.netxms.ui.eclipse.objectbrowser.commands.open_object_browser">
      </command>
   </extension>
   
   <extension point = "org.eclipse.ui.actionSets">
	   <actionSet id="org.netxms.ui.eclipse.objectbrowser.action_set"
		   label="Object Browser"
		   visible="true">
		   <action id="org.netxms.ui.eclipse.objectbrowser.actions.open"
			   menubarPath="view/primary"
			   toolbarPath="view"
			   label="Object Browser"
			   tooltip="Open Object Browser"
			   icon="icons/object_browser.png"
			   class="org.netxms.ui.eclipse.objectbrowser.actions.OpenObjectBrowser"
			   definitionId="org.netxms.ui.eclipse.objectbrowser.commands.open_object_browser">
		   </action>
	   </actionSet>
   </extension>

   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.netxms.ui.eclipse.objectbrowser.commands.open_object_browser"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F3">
      </key>
   </extension>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.netxms.ui.eclipse.objectbrowser.actions.popup.object.bind"
            objectClass="org.netxms.client.NXCObject">
         <action
               class="org.netxms.ui.eclipse.objectbrowser.actions.BindObject"
               enablesFor="1"
               id="org.netxms.ui.eclipse.objectbrowser.popupActions.BindObject"
               label="Bind..."
               menubarPath="objectmgmt">
         </action>
      </objectContribution>
   </extension>

  <extension
     point="org.eclipse.core.runtime.adapters">
        <factory 
           class="org.netxms.ui.eclipse.objectbrowser.ObjectAdapterFactory" 
           adaptableType="org.netxms.client.NXCObject">
          <adapter type="org.eclipse.ui.model.IWorkbenchAdapter"/>
        </factory>
  </extension>

</plugin>
