<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.netxms.ui.eclipse.actionmanager.views.ActionManager"
            icon="icons/actionmgr.png"
            id="org.netxms.ui.eclipse.actionmanager.views.ActionManager"
            name="Actions Configuration"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Open actions configuration view"
            id="org.netxms.ui.eclipse.actionmanager.commands.open_action_manager"
            name="Actions Configuration">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.netxms.ui.eclipse.actionmanager.action_set"
            label="Actions Configuration"
            visible="true">
         <action
               class="org.netxms.ui.eclipse.actionmanager.actions.OpenActionManager"
               definitionId="org.netxms.ui.eclipse.actionmanager.commands.open_action_manager"
               icon="icons/actionmgr.png"
               id="org.netxms.ui.eclipse.alarmviewer.actions.open"
               label="Actions Configuration"
               menubarPath="config/additions">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.netxms.client.ServerAction"
            class="org.netxms.ui.eclipse.actionmanager.ServerActionAdapterFactory">
         <adapter
               type="org.eclipse.ui.model.IWorkbenchAdapter">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            class="org.netxms.ui.eclipse.actionmanager.ServerActionDecorator"
            id="org.netxms.ui.eclipse.decorators.ServerAction"
            label="Server Actions Decorator"
            lightweight="false"
            state="true">
         <enablement>
            <objectClass
                  name="org.netxms.client.ServerAction">
            </objectClass>
         </enablement>
         <description>
            Decorates server actions labels with "disabled" icon if action is disabled
         </description>
      </decorator>
   </extension>

</plugin>
