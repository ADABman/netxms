<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="org.netxms.ui.eclipse.console.application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.netxms.ui.eclipse.console.NXMCApplication">
         </run>
      </application>
   </extension>
   
   <extension point="org.eclipse.core.runtime.preferences">
      <initializer class="org.netxms.ui.eclipse.console.PreferenceInitializer"/>
   </extension>
   
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.default"
            class="org.netxms.ui.eclipse.console.perspectives.DefaultPerspective"
            id="org.netxms.ui.eclipse.console.DefaultPerspective">
      </perspective>
   </extension>
   
   <extension
         point="org.eclipse.ui.views">
      <view
            name="%view.progress"
            icon="icons/pview.gif"
            category="org.eclipse.ui"
            class="org.eclipse.ui.ExtensionFactory:progressView"
            id="org.eclipse.ui.views.ProgressView">
      </view>
      <category
            id="org.netxms.ui.eclipse.viewcategory.config"
            name="Configuration">
      </category>
      <category
            id="org.netxms.ui.eclipse.viewcategory.tools"
            name="Tools">
      </category>
      <view
            allowMultiple="false"
            category="org.netxms.ui.eclipse.viewcategory.tools"
            class="org.netxms.ui.eclipse.console.views.ServerConsole"
            icon="icons/server_console.png"
            id="org.netxms.ui.eclipse.console.views.ServerConsole"
            name="Server Console"
            restorable="true">
      </view>
   </extension>

   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.netxms.ui.eclipse.console.application"
            name="NetXMS Management Console">
         <property
               name="appName"
               value="NetXMS Management Console">
         </property>
         <property
               name="aboutText"
               value="NetXMS Management Console&#x0A;&#x0A;Version 1.1.1&#x0A;Copyright (c) 2003-2011 Victor Kirhenshtein, Alex Kirhenshtein">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="startupForegroundColor"
               value="FFFF00">
         </property>
         <property
               name="startupMessageRect"
               value="7,265,386,20">
         </property>
         <property
               name="startupProgressRect"
               value="0,285,400,15">
         </property>
      </product>
   </extension>
   
   <extension point="org.eclipse.ui.preferencePages">
     <page name="%page.workbench"
           class="org.netxms.ui.eclipse.console.preferencepages.WorkbenchGeneralPrefs"
           id="org.eclipse.ui.preferencePages.Workbench">
     </page>
     <page name="%page.appearance"
           category="org.eclipse.ui.preferencePages.Workbench"
           class="org.eclipse.ui.ExtensionFactory:appearancePreferencePage"
           id="org.eclipse.ui.preferencePages.Views">
         <keywordReference id="org.eclipse.ui.ide.appearance"/>
         <keywordReference id="org.eclipse.ui.ide.themes"/>
         <keywordReference id="org.eclipse.ui.ide.tabs"/>
      </page>
      <page category="org.eclipse.ui.preferencePages.Workbench"
            class="org.eclipse.ui.ExtensionFactory:keysPreferencePage"
            id="org.eclipse.ui.preferencePages.Keys"
            name="%page.keys">
         <keywordReference id="org.eclipse.ui.ide.keys"/>
     </page>
     <page
            name="%page.decorators"
            category="org.eclipse.ui.preferencePages.Views"
            class="org.eclipse.ui.ExtensionFactory:decoratorsPreferencePage"
            id="org.eclipse.ui.preferencePages.Decorators">
         <keywordReference id="org.eclipse.ui.ide.appearance"/>
     </page>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Open server console"
            id="org.netxms.ui.eclipse.console.commands.open_server_console"
            name="Server Console">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.netxms.ui.eclipse.console.action_set"
            label="Core Action Set"
            visible="true">
         <action
               class="org.netxms.ui.eclipse.console.actions.OpenServerConsole"
               definitionId="org.netxms.ui.eclipse.console.commands.open_server_console"
               icon="icons/server_console.png"
               id="org.netxms.ui.eclipse.console.actions.open_server_console"
               label="Server Console"
               menubarPath="tools/additions">
         </action>
      </actionSet>
   </extension>

</plugin>
