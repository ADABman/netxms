<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="org.netxms.ui.eclipse.tweaklets" name="NXMC Tweaklets" schema="schema/org.netxms.ui.eclipse.tweaklets.exsd"/>
   <extension-point id="org.netxms.ui.eclipse.loginlisteners" name="NXMC Login Listeners" schema="schema/org.netxms.ui.eclipse.loginlisteners.exsd"/>
   <extension-point id="org.netxms.ui.eclipse.branding" name="NetXMS Console Branding" schema="schema/org.netxms.ui.eclipse.branding.exsd"/>
   <extension
         id="org.netxms.ui.eclipse.console.application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.netxms.ui.eclipse.console.NXMCApplication">
         </run>
      </application>
   </extension>
   
   <extension point="org.eclipse.core.runtime.preferences">
      <initializer class="org.netxms.ui.eclipse.console.PreferenceInitializer"/>
   </extension>
   
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.default"
            class="org.netxms.ui.eclipse.console.perspectives.DefaultPerspective"
            id="org.netxms.ui.eclipse.console.DefaultPerspective">
      </perspective>
   </extension>
   
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.eclipse.ui"
            class="org.eclipse.ui.ExtensionFactory:progressView"
            icon="icons/pview.gif"
            id="org.eclipse.ui.views.ProgressView"
            name="%view.progress"
            restorable="true">
      </view>
      <category
            id="org.netxms.ui.eclipse.viewcategory.config"
            name="%category.config">
      </category>
      <category
            id="org.netxms.ui.eclipse.viewcategory.tools"
            name="%category.tools">
      </category>
      <view
            allowMultiple="false"
            category="org.netxms.ui.eclipse.viewcategory.tools"
            class="org.netxms.ui.eclipse.console.views.ServerConsole"
            icon="icons/server_console.png"
            id="org.netxms.ui.eclipse.console.views.ServerConsole"
            name="%view.serverConsole"
            restorable="true">
      </view>
   </extension>

   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.netxms.ui.eclipse.console.application"
            name="NetXMS Management Console">
         <property
               name="appName"
               value="NetXMS Management Console">
         </property>
         <property
               name="aboutText"
               value="NetXMS Management Console&#x0A;&#x0A;Version 1.2.3&#x0A;Copyright (c) 2003-2012 Victor Kirhenshtein, Alex Kirhenshtein">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="startupForegroundColor"
               value="FFFF00">
         </property>
         <property
               name="startupMessageRect"
               value="7,265,386,20">
         </property>
         <property
               name="startupProgressRect"
               value="0,285,400,15">
         </property>
         <property
               name="aboutImage"
               value="icons/launcher/128x128.png">
         </property>
         <property
               name="windowImages"
               value="icons/launcher/16x16.png,icons/launcher/32x32.png,icons/launcher/48x48.png,icons/launcher/64x64.png,icons/launcher/128x128.png">
         </property>
      </product>
   </extension>
   
   <extension point="org.eclipse.ui.preferencePages">
     <page name="%page.workbench"
           class="org.netxms.ui.eclipse.console.preferencepages.WorkbenchGeneralPrefs"
           id="org.eclipse.ui.preferencePages.Workbench">
     </page>
     <page name="%page.appearance"
           category="org.eclipse.ui.preferencePages.Workbench"
           class="org.eclipse.ui.ExtensionFactory:appearancePreferencePage"
           id="org.eclipse.ui.preferencePages.Views">
         <keywordReference id="org.eclipse.ui.ide.appearance"/>
         <keywordReference id="org.eclipse.ui.ide.themes"/>
         <keywordReference id="org.eclipse.ui.ide.tabs"/>
      </page>
      <page category="org.eclipse.ui.preferencePages.Workbench"
            class="org.eclipse.ui.ExtensionFactory:keysPreferencePage"
            id="org.eclipse.ui.preferencePages.Keys"
            name="%page.keys">
         <keywordReference id="org.eclipse.ui.ide.keys"/>
     </page>
     <page
            name="%page.decorators"
            category="org.eclipse.ui.preferencePages.Views"
            class="org.eclipse.ui.ExtensionFactory:decoratorsPreferencePage"
            id="org.eclipse.ui.preferencePages.Decorators">
         <keywordReference id="org.eclipse.ui.ide.appearance"/>
     </page>
     <page
           class="org.netxms.ui.eclipse.console.preferencepages.HttpProxyPrefs"
           id="org.netxms.ui.eclipse.preferencePages.HttpProxy"
           name="%page.httpProxy">
     </page>
     <page
           class="org.netxms.ui.eclipse.console.preferencepages.RegionalSettingsPrefPage"
           id="org.netxms.ui.eclipse.preferencePages.RegionalSettings"
           name="%page.regionalSettings">
     </page>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="%actionDescription.OpenServerConsole"
            id="org.netxms.ui.eclipse.console.commands.open_server_console"
            name="%action.OpenServerConsole">
      </command>
      <command
            description="%actionDescription.FullScreen"
            id="org.netxms.ui.eclipse.console.commands.full_screen"
            name="%action.FullScreen">
      </command>
      <command
            description="%actionDescription.SendSMS"
            id="org.netxms.ui.eclipse.console.commands.send_sms"
            name="%action.SendSMS">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.netxms.ui.eclipse.console.action_set"
            label="%actionSet.core"
            visible="true">
         <action
               class="org.netxms.ui.eclipse.console.actions.OpenServerConsole"
               definitionId="org.netxms.ui.eclipse.console.commands.open_server_console"
               icon="icons/server_console.png"
               id="org.netxms.ui.eclipse.console.actions.open_server_console"
               label="%action.OpenServerConsole"
               menubarPath="tools/additions">
         </action>
         <action
               class="org.netxms.ui.eclipse.console.actions.SendSMS"
               definitionId="org.netxms.ui.eclipse.console.commands.send_sms"
               id="org.netxms.ui.eclipse.console.actions.send_sms"
               label="%action.SendSMS"
               menubarPath="tools/additions">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.netxms.ui.eclipse.console.commands.full_screen"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F11">
      </key>
      <key
            commandId="org.netxms.ui.eclipse.console.commands.send_sms"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+Alt+S">
      </key>
   </extension>

</plugin>
