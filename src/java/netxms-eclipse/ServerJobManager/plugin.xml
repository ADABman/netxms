   </extension>

   <extension point = "org.eclipse.ui.actionSets">
	   <actionSet id="org.netxms.ui.eclipse.serverjobmanager.action_set"
		   label="Server Jobs"
		   visible="true">
		   <action id="org.netxms.ui.eclipse.serverjobmanager.actions.open"
