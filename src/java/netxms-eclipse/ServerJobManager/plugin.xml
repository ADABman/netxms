      <view
            name="Server Jobs"
            icon="icons/server_jobs.png"
            class="org.netxms.ui.eclipse.serverjobmanager.views.ServerJobManager"
            id="org.netxms.ui.eclipse.serverjobmanager.view.server_job_manager">
      </view>
   </extension>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Views"
            id="org.netxms.ui.eclipse.console.category.views">
      </category>
      <command
            name="Server Jobs"
            description="Open server job manager"
            categoryId="org.netxms.ui.eclipse.console.category.views"
            id="org.netxms.ui.eclipse.serverjobmanager.commands.open_server_job_manager">
