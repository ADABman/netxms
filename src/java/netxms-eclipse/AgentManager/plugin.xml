         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="org.netxms.ui.eclipse.viewcategory.config"
            class="org.netxms.ui.eclipse.agentmanager.views.AgentConfigEditorView"
            icon="icons/agent_config.gif"
            id="org.netxms.ui.eclipse.agentmanager.views.AgentConfigEditorView"
            name="Agent Config"
            restorable="false">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
