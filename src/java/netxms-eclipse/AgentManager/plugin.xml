            objectClass="org.netxms.client.objects.Node">
         <action
               class="org.netxms.ui.eclipse.agentmanager.actions.OpenAgentConfig"
               enablesFor="+"
               icon="icons/agent_config.gif"
               id="org.netxms.ui.eclipse.agentmanager.popupActions.OpenAgentConfig_Node"
               label="Edit agent&apos;s configuration file"
               menubarPath="objectmgmt"
