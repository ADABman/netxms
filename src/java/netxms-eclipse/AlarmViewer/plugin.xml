<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Alarm Browser"
            allowMultiple="false"
            icon="icons/alarm_browser.png"
            class="org.netxms.ui.eclipse.alarmviewer.AlarmBrowser"
            id="org.netxms.ui.eclipse.alarmviewer.view.alarm_browser">
      </view>
   </extension>

   <extension
         point="org.eclipse.ui.commands">
      <command
            name="Alarm Browser"
            description="Open Alarm Browser"
            categoryId="org.netxms.ui.eclipse.console.category.views"
            id="org.netxms.ui.eclipse.alarmviewer.commands.open_alarm_browser">
      </command>
   </extension>
   
   <extension point = "org.eclipse.ui.actionSets">
	   <actionSet id="org.netxms.ui.eclipse.alarmviewer.action_set"
		   label="Alarm Browser"
		   visible="true">
		   <action id="org.netxms.ui.eclipse.alarmviewer.actions.open"
			   menubarPath="view/primary"
			   toolbarPath="view/additions"
			   label="Alarm Browser"
			   tooltip="Open Alarm Browser"
			   icon="icons/alarm_browser.png"
			   class="org.netxms.ui.eclipse.alarmviewer.actions.OpenAlarmBrowser"
			   definitionId="org.netxms.ui.eclipse.alarmviewer.commands.open_alarm_browser">
		   </action>
	   </actionSet>
   </extension>

   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.netxms.ui.eclipse.alarmviewer.commands.open_alarm_browser"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F8">
      </key>
   </extension>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.netxms.ui.eclipse.alarmviewer.actions.popup.terminate_alarm"
            objectClass="org.netxms.client.NXCAlarm">
         <action
               class="org.netxms.ui.eclipse.alarmviewer.actions.TerminateAlarm"
               id="org.netxms.ui.eclipse.alarmviewer.popupActions.TerminateAlarm"
               label="Terminate"
   		       icon="icons/terminated.png"
               menubarPath="additions">
         </action>
      </objectContribution>
   </extension>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.netxms.ui.eclipse.alarmviewer.actions.popup.acknowledge_alarm"
            objectClass="org.netxms.client.NXCAlarm">
         <action
               class="org.netxms.ui.eclipse.alarmviewer.actions.AcknowledgeAlarm"
               id="org.netxms.ui.eclipse.alarmviewer.popupActions.AcknowledgeAlarm"
               label="Acknowledge"
   		       icon="icons/acknowledged.png"
               menubarPath="additions">
         </action>
      </objectContribution>
   </extension>

</plugin>
