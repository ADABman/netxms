<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Config"
            id="org.netxms.ui.eclipse.config">
      </category>
      <view
            name="User Manager"
            icon="icons/user_manager.png"
            category="org.netxms.ui.eclipse.config"
            class="org.netxms.ui.eclipse.usermanager.views.UserManager"
            id="org.netxms.ui.eclipse.usermanager.view.user_manager">
      </view>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Views"
            id="org.netxms.ui.eclipse.console.category.views">
      </category>
      <command
            name="User Manager"
            description="Open user manager"
            categoryId="org.netxms.ui.eclipse.console.category.views"
            id="org.netxms.ui.eclipse.usermanager.commands.open_user_manager">
      </command>
   </extension>

   <extension point = "org.eclipse.ui.actionSets">
	   <actionSet id="org.netxms.ui.eclipse.usermanager.action_set"
		   label="User Manager"
		   visible="true">
		   <action id="org.netxms.ui.eclipse.usermanager.actions.open"
			   menubarPath="view/config/additions"
			   label="User Manager"
			   tooltip="Open user manager"
			   icon="icons/user_manager.png"
			   class="org.netxms.ui.eclipse.usermanager.actions.OpenUserManager"
			   definitionId="org.netxms.ui.eclipse.usermanager.commands.open_user_manager">
		   </action>
	   </actionSet>
   </extension>

  <extension
     point = "org.eclipse.ui.propertyPages">
        <page
           id="org.netxms.ui.eclipse.usermanager.propertypages.General"
           name="General"
	       class="org.netxms.ui.eclipse.usermanager.propertypages.General">
          <enabledWhen>
             <instanceof
                  value="org.netxms.client.NXCUserDBObject">
             </instanceof>
          </enabledWhen>
        </page>
  </extension>

  <extension
     point = "org.eclipse.ui.propertyPages">
        <page
           id="org.netxms.ui.eclipse.usermanager.propertypages.Authentication"
           name="Authentication"
	       class="org.netxms.ui.eclipse.usermanager.propertypages.Authentication">
          <enabledWhen>
             <instanceof
                  value="org.netxms.client.NXCUser">
             </instanceof>
          </enabledWhen>
        </page>
  </extension>

  <extension
     point="org.eclipse.core.runtime.adapters">
        <factory 
           class="org.netxms.ui.eclipse.usermanager.UserAdapterFactory" 
           adaptableType="org.netxms.client.NXCUserDBObject">
          <adapter type="org.eclipse.ui.model.IWorkbenchAdapter"/>
        </factory>
  </extension>
</plugin>
