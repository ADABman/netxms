<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            name="Log Viewer"
            allowMultiple="true"
            class="org.netxms.ui.eclipse.logviewer.views.LogViewer"
            id="org.netxms.ui.eclipse.logviewer.view.log_viewer">
      </view>
   </extension>

   <extension
         point="org.eclipse.ui.commands">
      <command
            name="Audit Log"
            description="Open Audit Log"
            categoryId="org.netxms.ui.eclipse.console.category.views"
            id="org.netxms.ui.eclipse.logviewer.commands.openAuditLog">
      </command>
      <command
            name="Event Log"
            description="Open Event Log"
            categoryId="org.netxms.ui.eclipse.console.category.views"
            id="org.netxms.ui.eclipse.logviewer.commands.openEventLog">
      </command>
   </extension>
   
   <extension point = "org.eclipse.ui.actionSets">
	   <actionSet id="org.netxms.ui.eclipse.logviewer.action_set"
		   label="Log Viewer"
		   visible="true">
		   <action id="org.netxms.ui.eclipse.logviewer.actions.openAuditLog"
			   menubarPath="view/logs"
			   toolbarPath="logs/additions"
			   label="Audit Log"
			   tooltip="Open Audit Log"
			   icon="icons/AuditLog.png"
			   class="org.netxms.ui.eclipse.logviewer.actions.OpenAuditLog"
			   definitionId="org.netxms.ui.eclipse.logviewer.commands.openAuditLog">
		   </action>
		   <action id="org.netxms.ui.eclipse.logviewer.actions.openEventLog"
			   menubarPath="view/logs"
			   toolbarPath="logs/additions"
			   label="Event Log"
			   tooltip="Open Event Log"
			   icon="icons/EventLog.png"
			   class="org.netxms.ui.eclipse.logviewer.actions.OpenEventLog"
			   definitionId="org.netxms.ui.eclipse.logviewer.commands.openEventLog">
		   </action>
	   </actionSet>
   </extension>

   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.netxms.ui.eclipse.logviewer.commands.openAuditLog"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+Alt+F11">
      </key>
      <key
            commandId="org.netxms.ui.eclipse.logviewer.commands.openEventLog"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+F8">
      </key>
   </extension>

</plugin>
