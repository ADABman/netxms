   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.netxms.ui.eclipse.epp.commands.open_policy_editor"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F4">
